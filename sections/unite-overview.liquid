<section class="flex-grid" style="min-height:40vh;" id="dp-articles">
  {% for block in section.blocks %}  
  <div class="col custom-img-flex">
    <a href="{{block.settings.article-url}}">
      <div class="unite-thumb-box"> 
        <img class="unite-article-thumbnail" src="{{ block.settings.dp-thumbnail | img_url: 'master' }}" alt="">
      </div>
      <div class="unite-article-title">
        {{block.settings.dp-title}}
      </div>
      <div class="unite-article-description">
        {{block.settings.dp-description}}
      </div>
    </a>
  </div>
  {%endfor%}
</section>
{% schema %}
{
  "name": "All articles",
	"max_blocks": 12,
	"settings":[
	  {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
	  {
        "type": "image_picker",
        "id": "logo_image",
        "label": "Logo image"
      }
	],
  "blocks": [
    {
      "type": "select",
      "name": "Article",
      "settings": [

      {
        "type": "image_picker",
        "id": "dp-thumbnail",
        "label": "Thumbnail"
      },
        {
          "id": "dp-title",
          "type": "text",
          "label": "Title",
          "default": "Title"
        },
        {
          "id": "dp-description",
          "type": "richtext",
          "label": "Description",
          "default": "<p>Description</p>"
        },
        {
            "id": "article-url",
            "type": "url",
            "label": "Url",
            "info": "The url where the article links to."
          }
      ]
    }
  ]
}
{% endschema %}