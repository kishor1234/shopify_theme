{% schema %}
{
  "name": "Homepage Sections",

      "settings": [
  		{
        "type": "header",
        "content": "Big Column Section"
      },
  	{
        "type": "checkbox",
        "id": "sale-theme",
        "label": "Show sale type section",
        "info": "Change sale settings in sale section. This one includes countdown and text in middle.",
        "default": false
      },
	{
        "type": "checkbox",
        "id": "background-video",
        "label": "Use video",
        "info": "If you click this it will use a video as background.",
        "default": false
      },
	{
            "id": "video-name",
            "type": "text",
            "label": "Video name",
            "default": "example.mp4",
            "info": "Upload video to assets in theme and put the video name here."
          },
 	{
        "type": "image_picker",
        "id": "big-section-image",
        "label": "Homepage Image"
      	},
   		{
        "type": "html",
        "id": "big-text",
        "label": "Homepage text",
        "info": "For example: Archive sale now online"
      },
		{
            "id": "big-button-text",
            "type": "text",
            "label": "Button text",
            "default": "Button text",
            "info": "If button text is empty it won't show."
          },
{
            "id": "big-button-link",
            "type": "url",
            "label": "Button link"
          }
      ],
  "presets": [
    {
      "name": "Big Column Section",
      "category": "Show one big image with text/buttons"
    }
  ]
    } 

{% endschema %}