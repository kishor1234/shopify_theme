<div id="mobile-fullpage">
{% for block in section.blocks %}  
<div class="more-view-wrapper section{% if forloop.index == 1 %} active{% endif %}" style="margin-top:0" id="wc-section{{ forloop.index }}">  
  <div class="mobile-slider">
    {%- if block.settings.image_01 != blank -%}
    <div>
      <a href="{{ block.settings.btn_link_01 }}">
        <div class="mobile-section-overlay {{ block.settings.image_01_overlay }}"></div>
        <img class="lazy blur" src="{{ block.settings.image_01 | img_url: 'master' }}" data-src="{{ block.settings.image_01 | img_url: 'master' }}"  alt="image_01">
      </a>  
      
      <div class="mobile-section-text-overlay">
        {%- if block.settings.desc_clock != blank -%}
          <div class="mobile-clock">{{ block.settings.desc_clock }}</div>
        {%- endif -%}
      {%- if block.settings.mobile_desc_01 != blank -%}
      <p class="mobile-section-desc {{ block.settings.mobile_desc_color_01 }} {{ block.settings.mobile_desc_fontweight_01 }}">{{ block.settings.mobile_desc_01 }}</p>
      {%- endif -%}
      {%- if block.settings.btn_link_01 != blank and block.settings.btn_text_01 != blank -%}
      <a href="{{ block.settings.btn_link_01 }}" class="btn {{ block.settings.button_color_01 }}">{{ block.settings.btn_text_01 }}</a>
      {%- endif -%}
      {%- if block.settings.second_btn_link_01 != blank and block.settings.second_btn_text_01 != blank -%}
      <a href="{{ block.settings.second_btn_link_01 }}" class="btn {{ block.settings.button_color_01 }} second-button-mobile-section">{{ block.settings.second_btn_text_01 }}</a>
      {%- endif -%}
    </div>
    </div>
    {%- endif -%}
    
     {%- if block.settings.image_02 != blank -%}
    <div>
      <a href="{{ block.settings.btn_link_02 }}">
        <div class="mobile-section-overlay {{ block.settings.image_02_overlay }}"></div>
